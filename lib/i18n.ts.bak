// Helper functions with improved error handling and validation
export function getTranslation(key: string, lang: Language = 'en'): string {
  try {
    const keys = key.split('.')
    let value: any = translations
    
    for (const k of keys) {
      if (!value?.[k]) {
        console.warn(`Translation key not found: ${key}`)
        return key
      }
      value = value[k]
    }
    
    if (!value?.[lang] && !value?.en) {
      console.warn(`No translation found for key: ${key} in language: ${lang}`)
      return key
    }
    
    return value[lang] || value.en
  } catch (error) {
    console.error(`Error getting translation for key: ${key}`, error)
    return key
  }
}

export function getCurrentLanguage(): Language {
  try {
    if (typeof window === 'undefined') return 'en'
    const lang = localStorage.getItem('language') as Language
    return languages.find(l => l.code === lang) ? lang : 'en'
  } catch (error) {
    console.error('Error getting current language', error)
    return 'en'
  }
}

export function setCurrentLanguage(lang: Language): void {
  try {
    if (typeof window === 'undefined') return
    if (!languages.find(l => l.code === lang)) {
      console.error(`Invalid language code: ${lang}`)
      return
    }
    localStorage.setItem('language', lang)
    window.dispatchEvent(new Event('languageChange'))
  } catch (error) {
    console.error('Error setting language', error)
  }
}